{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "jsx": "react"
  },
  "include": ["src/**/*", "overrides.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
